  <ul>
    <li><a href="/users">Users</a></li>
    <li><a href="/photos">Photos</a></li>
  </ul>
</nav>

<%= @the_photo%>

  <dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src= <%= @the_photo.image %>>
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <p>
      <%= @the_photo.caption%>
    </p>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= User.where({:id => @the_photo.owner_id}).at(0).username %>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.created_at%>
  </dd>

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id%>" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value=<%= @the_photo.image%>>

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."><%= @the_photo.caption%></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.caption%>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table border=1>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>
  </tr>
  </table>
